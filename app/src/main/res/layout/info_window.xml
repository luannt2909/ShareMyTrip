<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp"
    android:background="@drawable/custom_background_infowindow">
    <ImageView
        android:id="@+id/imgavatarInfo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:src="@drawable/avatar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:layout_marginLeft="10dp">
        <TextView
            android:id="@+id/txtusernameInfo"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="luann27"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center_vertical"/>
        <TextView
            android:id="@+id/txtlocationInfo"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textSize="17sp"
            android:text="414214,1412312"
            android:gravity="center_vertical"/>
        <TextView
            android:id="@+id/txtaddressInfo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="17sp"
            android:text="HCM city"
            android:gravity="center_vertical"/>
    </LinearLayout>
</LinearLayout>
